rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can only read and write their own profile
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Users can only read and write their own subcollections
      match /{subcollection}/{docId} {
        allow read, write, delete: if isOwner(userId);
      }
    }
    
    // Appointments can be created by anyone, but only read/updated by participants (future rule)
    // For now, we allow authenticated users to create and read them.
    match /appointments/{appointmentId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null; // Simplified for now
    }

    // Video calls - allow anyone to create and read (for demo purposes)
    match /calls/{callId} {
      allow read, write: if true; // Allow all access for demo
    }

    // Signaling messages - allow anyone to create and read (for demo purposes)
    match /signaling/{messageId} {
      allow read, write: if true; // Allow all access for demo
    }
  }
}
